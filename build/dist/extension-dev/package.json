    "package": "bash build.sh && echo 'Package created successfully'",
    "test": "python3 validate_extension.py build/dist/extension-dev"
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "ai",
    "llm",
    "openai",
    "claude",
    "gemini"
  ],

{
  "name": "ai-language-translator",
  "version": "1.0.0",
  "description": "基于AI LLM的智能双语网页翻译插件",
  "main": "manifest.json",
  "scripts": {
    "build": "bash build.sh",
    "build:prod": "bash build.sh --production",
    "build:dev": "bash build.sh --development",
